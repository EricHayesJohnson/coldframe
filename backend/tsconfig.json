{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@coldframe/shared/*": ["shared/*"]
    },
    "rootDir": "src",
    "outDir": "dist",

    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "types": ["node", "vitest/globals"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
